<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yoant.foodcritic">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activities.VitaminsActivity" />
        <activity
            android:name=".view.activities.ProductsActivity"
            android:label="@string/title_activity_products"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.activities.CreateProductActivity" />
        <activity
            android:name=".view.activities.ProductTabbedActivity"
            android:label="@string/title_activity_product_tabbed"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.activities.ProductsTabActivity" />
        <activity android:name=".view.activities.tab_experiment.TestActivity"></activity>
    </application>

</manifest>