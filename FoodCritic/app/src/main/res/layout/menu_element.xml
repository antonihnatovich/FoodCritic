<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/menu_element_icon"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/menu_element_logo_content_description"
        android:scaleType="centerCrop"
        android:src="@drawable/vitamins_fruit_logo" />

    <TextView
        android:id="@+id/menu_element_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_element_logo_content_description"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/menu_element_icon"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/menu_element_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_element_name"
        android:layout_toEndOf="@id/menu_element_icon"
        android:text="@string/menu_element_logo_content_description"
        android:textSize="14sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"/>

</RelativeLayout>