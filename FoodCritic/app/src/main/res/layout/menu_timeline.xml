<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/menu_timeline_add_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Add New Dish"
        android:textSize="28sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/menu_timeline_name"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breakfast"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/menu_timeline_time"
        android:layout_below="@id/menu_timeline_name"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8:00"
        android:textSize="18sp"/>

    <ImageButton
        android:id="@+id/menu_timeline_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/triple_dots"
        android:scaleType="center"
        android:layout_alignParentEnd="true"
        android:background="#FAFAFA"
        />

    <TextView
        android:id="@+id/menu_timeline_percent"
        android:layout_toStartOf="@id/menu_timeline_image"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21/100%"
        android:textSize="16sp"
        />

</RelativeLayout>